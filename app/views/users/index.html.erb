<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class='table'>
  <thead class='thead-dark'>
    <tr>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.date_of_birth %></td>
        <td class='btn btn-light'><%= link_to 'Show', user %></td>
        <td class='btn btn-light'><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class='btn btn-danger'><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class='btn btn-dark'><%= link_to 'New User', new_user_path %></button>
